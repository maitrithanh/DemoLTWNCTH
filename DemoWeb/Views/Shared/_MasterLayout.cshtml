<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/mystyle.css" />
</head>
<body>
    <div id="div-top">
        <!-- Grey with black text -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="~/CustomerProducts/Index">CUSTOMER PRODUCT</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">CONTACT</a>
                </li>
            </ul>
            <div class="ms-auto" style="display: inline-block">
                @if (Session["TaiKhoan"] == null)
                {
                    <div style="display: inline-block">
                        <ul class="navbar-nav" style="border: 2px solid antiquewhite; border-radius: 99px">
                            <li class="nav-item active login-item" style="background: antiquewhite; border-radius: 99px">
                                <a class="nav-link" href="~/Users/Login">ĐĂNG NHẬP</a>
                            </li>
                            <li class="nav-item register-item">
                                <a class="nav-link" href="~/Users/Register">ĐĂNG KÝ</a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div style="display: inline-block">
                        <ul class="navbar-nav" style="border: 2px solid antiquewhite; border-radius: 99px">
                            <li class="nav-item active login-item" style="background: antiquewhite; border-radius: 99px">
                                <a class="nav-link" href="~/Users/Logout">ĐĂNG XUẤT</a>
                            </li>
                        </ul>
                    </div>
                }

                <div style="display: inline-block">
                    @Html.Action("CartPartial", "Cart")
                </div>
            </div>
        </nav>
    </div>
    <br />
    <div id="div-main">
        <div id="div-left">
            <h3>Danh mục sản phẩm</h3>
            @Html.Action("GetProductsByCategory", "CustomerProducts")
        </div>
        <div id="div-right">
            @RenderBody()
        </div>
    </div>
    <div id="div-footer">
        Footer
    </div>
</body>
</html>